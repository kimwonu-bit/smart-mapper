# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/smart-mapper
MONGODB_DB_NAME=smart-mapper

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ESP32 Configuration
ESP32_HOST=192.168.1.100
ESP32_PORT=8080
ESP32_RECONNECT_INTERVAL=5000
ESP32_HEARTBEAT_INTERVAL=3000

# WebSocket Configuration
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=20000
WS_MAX_CONNECTIONS=100

# Camera Streaming Configuration
CAMERA_FRAME_RATE=15
CAMERA_QUALITY=80
CAMERA_BUFFER_SIZE=10

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_KEY=your-api-key-for-esp32
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Map Configuration
MAP_GRID_SIZE=100
MAP_CELL_SIZE=10
MAP_MAX_DISTANCE=400
